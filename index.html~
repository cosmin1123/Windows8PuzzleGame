        <script>

             function resize() {
                 width = window.innerWidth
                 height = window.innerHeight

                     myimg = document.getElementById("a");
                     myimg.style.height = height * 0.5  + "px";
                     myimg.style.width = width * 0.40 + "px";

                     myimg = document.getElementById("b");
                     myimg.style.height = height * 0.5 + "px";
                     myimg.style.width = width * 0.40 + "px";

                     myimg = document.getElementById("c");
                     myimg.style.height = height + "px";
                     myimg.style.width = width * 0.10 + "px";
                 
             }
             resize();
             window.setInterval(resize, 1000);
    </script>

